<div class="jumbotron bg-secondary">
    <div class="mx-auto">
        <h1>Event Creation</h1>
    </div>
</div>

<div class="mx-auto" style="width: 900px;">
<div class='container'>
  <div class="pour-errors">
    <% if @event.errors.any? %>

  <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
    <p><strong>Event can't be created for the following reason(s) :</strong></p>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <% end %>
    </ul>
  </div>

  <% end %>
  </div>

    <%= form_tag url_for(action: 'create'), method: "post" do %>
    <p>Please fill in the following elements:</p>
    <div class="col-sm-6">
        <%= text_field_tag 'title', "", class: "form-control", placeholder: "Title"%>
    </div>
    <br>
    <br>
    <div class="col-sm-6">
        <%= text_area_tag 'description', "",  class: "form-control", placeholder: "Description, minimum is 20 characters"%>
    </div>
    <br>
    <div class="col-sm-6">
       <%= label_tag "Date and hours" %>
       <br>
       <td>  <%= select_datetime Time.now, :prefix => 'start_date'  , :minute_step => 5 %></td>
    </div>
    <br>
    <br>
    <div class="col-sm-2">
        <%= text_field_tag 'duration', "", class: "form-control", placeholder: "Duration (mn)"%>
    </div>
    <br>
    <br>
    <div class="col-sm-2">
        <%= text_field_tag 'price', "", class: "form-control", placeholder: "â‚¬"%>
    </div>
    <br>
    <br>
    <div class="col-sm-6">
        <%= text_area_tag 'location',"", class: "form-control", placeholder: "Location"%>
    </div>
    <br>
    <br>
    <%= submit_tag 'CREATE YOUR EVENT', class: " mx-auto col-sm-3 btn  btn-light btn-outline-secondary  my-2 " %>
    <% end %>
    </div>

</div>


