<div class="container">

<div class="card-group">
<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><i class="far fa-address-card"></i></h5>
    <div class="variable_attribute_header">
			<p>First name</p>
		</div>
    <p class="card-text"> <%= @user.first_name %></p>
  </div>
</div>

<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><i class="fas fa-file-signature"></i></h5>
    <div class="variable_attribute_header">
			<p>Last name</p>
		</div>
    <p class="card-text"> <%= @user.last_name %></p>
  </div>
</div>

<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><i class="fas fa-at"></i></h5>
    <div class="variable_attribute_header">
			<p>Email</p>
		</div>
    <p class="card-text"><%= @user.email %></p>
  </div>
</div>
</div>

<div class='mx-auto' style="width: 400px;height: 80px;">
<h2>Events :</h2>
</div>

<div class='card-columns'>
	<% @event.each do |event| %>
		<% if event.admin == @user %>
		<div class="card bg-secondary" style="width: 18rem;">
		  <div class="card-body">
		    <h5 class="card-title"><a class="text-warning"><%= link_to event.title.upcase , event_path(event.id)%></a></h5>
		  </div>
		</div>
	 	<% end %>
	 <% end %>
</div>
	<div class="btn btn-dark">
		<%= link_to "Edit profile", edit_user_registration_path, :class => "btn" %>
	</div>
</div>
